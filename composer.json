{
    "name": "numphp/numphp",
    "type": "library",
    "description": "Mathematical PHP library for scientific computing",
    "keywords": ["numeric"],
    "homepage": "http://numphp.org/",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon Lesti",
            "email": "info@gordonlesti.com",
            "homepage": "http://gordonlesti.com/",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpmd/phpmd" : "*",
        "squizlabs/php_codesniffer": "*",
        "sebastian/phpcpd": "*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "NumPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "NumPHPTest\\": "tests/"
        }
    },
    "replace": {
        "numphp/core": "self.version",
        "numphp/linalg": "self.version"
    }
}
